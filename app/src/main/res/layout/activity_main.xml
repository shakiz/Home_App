<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activities.activities.onboard.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:context=".activities.activities.onboard.MainActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/bannerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:translationZ="4dp"
                android:layout_marginTop="-16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scaleType="fitCenter">

                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/transparent"
                        app:elevation="0dp"
                        android:id="@+id/app_bar">

                        <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tool_bar"
                            app:navigationIcon="?attr/homeAsUpIndicator"
                            style="@style/TextAppearance.Widget.Event.Toolbar.Title"
                            app:title="@string/app_name"
                            app:titleTextColor="@color/md_grey_800">

                        </androidx.appcompat.widget.Toolbar>

                    </com.google.android.material.appbar.AppBarLayout>

                    <TextView
                        android:id="@+id/GreetingsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/md_green_800"
                        android:textSize="24sp"
                        android:text="@string/good_morning"/>

                    <TextView
                        android:id="@+id/DateTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/GreetingsText"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/md_grey_800"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="@string/demo_month_and_day"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingBottom="24dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            android:padding="4dp"
                            android:background="@drawable/total_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/total_rooms"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalRooms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/zero"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:padding="4dp"
                            android:background="@drawable/total_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/total_meters"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalMeters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/zero"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:padding="4dp"
                            android:background="@drawable/total_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/total_tenants"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalTenants"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="@string/zero"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/md_black_1000"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.core.widget.NestedScrollView
                android:layout_below="@id/bannerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/mainLayout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/room_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:translationZ="2dp"
                            app:cardBackgroundColor="@color/md_white_1000"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/rectangle_green"
                                        android:elevation="4dp"
                                        android:padding="8dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_rooms"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:scrollHorizontally="true"
                                        android:text="@string/room_list"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:paddingBottom="2dp"
                                        android:text="@string/all_rooms"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/rent_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:translationZ="2dp"
                            app:cardBackgroundColor="@color/md_white_1000"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/rectangle_green"
                                        android:elevation="4dp"
                                        android:padding="8dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_tenant"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:scrollHorizontally="true"
                                        android:text="@string/rent_list"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:paddingBottom="2dp"
                                        android:text="@string/all_rents"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/meter_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:translationZ="2dp"
                            app:cardBackgroundColor="@color/md_white_1000"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/rectangle_green"
                                        android:elevation="4dp"
                                        android:padding="8dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_electric_meter"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:scrollHorizontally="true"
                                        android:text="@string/meter_list"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:paddingBottom="2dp"
                                        android:text="@string/all_meters"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bill_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:translationZ="2dp"
                            app:cardBackgroundColor="@color/md_white_1000"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/rectangle_green"
                                        android:elevation="4dp"
                                        android:padding="8dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_electricity_bill"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:scrollHorizontally="true"
                                        android:text="@string/electricity_bill"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:paddingBottom="2dp"
                                        android:text="@string/all_bills"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tenant_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="2"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:translationZ="2dp"
                            app:cardBackgroundColor="@color/md_white_1000"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="2dp"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="16dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/rectangle_green"
                                        android:elevation="4dp"
                                        android:padding="8dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_owner"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:scrollHorizontally="true"
                                        android:text="@string/tenant_list"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:paddingBottom="2dp"
                                        android:text="@string/all_tenants"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="4dp"
            app:insetForeground="@color/md_blue_grey_800"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:background="@color/md_white_1000"
            app:itemBackground="@drawable/menu_background_color"
            app:itemIconTint="@color/menu_icon_color"
            app:itemTextColor="@color/menu_text_color"
            app:menu="@menu/activity_home_drawer"
            />

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>